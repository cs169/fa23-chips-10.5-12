<div class="container mt-4">
  <h1>Top 20 Candidates</h1>

  <p>Top 20 candidates for <%= @selected_cycle %> and <%= @selected_category %> (sorted by name):</p>

  <% if @top_candidates.present? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        <% @top_candidates.each do |candidate| %>
          <tr>
            <td><%= candidate[:name] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No candidates found.</p>
  <% end %>
</div>
